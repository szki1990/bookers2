<div>
  <%= flash[:notice] %>
</div>

<main>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <%= render 'users/list', user: @user, book: @book, books: @books %>
            </div>
            <div class="col-md-8">
                <h1>Users</h1>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>image</th>
                            <th>name</th>
                            <th></th>
                        </tr>
                    </thead>
                          
                    <tbody>
                        <% @users.each do |user| %>
                        <tr>
                            <td><%= image_tag user.get_profile_image %></td>
                            <td><% if @users.present? %> 
                                    <strong><%= user.name %></strong>
                                <% end %>
                            </td>
                            <td><%= link_to 'show', user_path(user) %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
