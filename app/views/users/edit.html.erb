<main>
    <div class="container">
        <div class="row pt-5">
            <div class="mx-auto">
                <h1>User info</h1>
                <%= flash[:notice] %>
                <% if @user.errors.any? %>
                    <%= @user.errors.count %>error prohibited this obj from being <br>saved:
                    <ul>
                        <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                    </ul>
                <% end %>
                
                <%= form_with model: @user do |f| %>
                <div class="name">
                    <label for="exampleFormControlInput1" class="form-label">Name</label>
                    <%= f.text_field :name, autofocus: true, class: "form-control", id:"exampleFormControlInput1" %>
                </div>
                <div class="inputImage">
                    <label for="inputImage">Image</label>
                    <div class="mt-2">
                        <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
                    </div>
                </div>
                <div class="Introduction">
                    <label for="exampleFormControlTextarea1" class="col-form-label">Introduction</label>
                    <%= f.text_area :introduction, autofocus: true, class: "form-control", id:"exampleFormControlTextarea1", rows: 3 %>
                </div>
                <div class="mt-3">
                    <%= f.submit "Update User", class: "btn btn-secondary" %>
                </div>
                <% end %>
                
            </div>
        </div>
    </div>
</main>
