<h1>usersのshowページ</h1>

<div class="Container">
    <div class="row">
        <div class="col-lg-4">
            <%= render 'users/list', user: @user, book: @book, books: @books %>
        </div>
        <div class="col-lg-8">
            <h1>Books</h1>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Opinion</th>
                    </tr>
                </thead>
                      
                <tbody>
                    <% @books.each do |book| %>
                    <tr>
                        <td><%= image_tag @user.get_profile_image %></td>
                        <td><%= link_to book.title, book_path(book)  %></td>
                        <td><%= book.body %></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>