<div>
  <%= flash[:notice] %>
</div>
<main>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <%= render 'users/list', user: @user, book: @book, books: @books %>
            </div>
            <div class="col-md-8">
                <h1>Books</h1>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Title</th>
                            <th>Opinion</th>
                        </tr>
                    </thead>
                          
                    <tbody>
                        <% @books.each do |book| %>
                        <tr>
                            <td><%= link_to user_path(@user), class: "image-link" do %>
                                    <%= image_tag @user.get_profile_image %>
                                <% end %>
                            </td>
                            <td><%= link_to book.title, book_path(book)  %></td>
                            <td><%= book.body %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
