<h1>usersのshowページ</h1>

<% @books.each do |book| %>
    <%= image_tag @user.get_profile_image %>
      <% if @users.present? %> 
      <p><strong><%= @user.name %></strong></p>
      <% end %>
    <%= book.title %>
    <%= book.body %>
    
    <% if @book.user == current_user %>
      <%= link_to 'Edit', edit_book_path(book.id) %>
      <%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
    <% end %>
  <% end %>


