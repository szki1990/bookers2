

<div>
  <%= flash[:notice] %>
</div>

<h1>User info</h1>
  <%= image_tag user.get_profile_image %>
    <% if users.present? %> 
      <p><strong>name<%= user.name %></strong></p>
      <p><strong>introduction<%= user.introduction %></strong></p>
    <% else %>
    <p></p>
    <% end %>
    
    <% if user == current_user %> 
      <%= link_to edit_user_path(user), class: "btn btn-warning btn-sm btn-block" do %>
      <i class="fa-solid fa-user-gear"></i>
    <% end %>
  <% end %>

<h1>New book</h1>
<%= form_with model: book do |f| %>
 
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
