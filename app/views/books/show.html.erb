<h1>booksのshow</h1>
<div>
  <%= flash[:notice] %>
</div>
<main>
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <%= render 'users/list', user: @user, book: @book, books: @books %>
      </div>
      <div class="col-lg-9">
        <h1>Book detail</h1>
        <table class="table table-hover">
          <tbody>
            <tr>
              <td><%= image_tag @user.get_profile_image %><br>
              <strong><%= link_to @user.name, user_path %></strong>
              </td>
              <td><%= link_to @book.title, book_path %></td>
              <td><%= @book.body %></td>
              <% if @book.user == current_user %>
              <td><%= link_to 'Edit', edit_book_path, class: "btn btn-success" %></td>
              <td><%= link_to 'Destroy', book_path, method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

  
    
  