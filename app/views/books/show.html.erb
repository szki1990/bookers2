<div>
  <%= flash[:notice] %>
</div>
<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/list', user: @user, book: @book, books: @books %>
      </div>
      <div class="col-md-8">
        <h1>Book detail</h1>
        <table class="table table-hover">
          <tbody>
            <tr>
              <td><%= link_to user_path(@user), class: "image-link" do %>
                    <%= image_tag @user.get_profile_image %><br>
                  <% end %>
              <strong><%= link_to @user.name, user_path(@user) %></strong>
              </td>
              <td><%= link_to @book.title, book_path %></td>
              <td><%= @book.body %></td>
              <% if @book.user_id == current_user.id %>
              <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-success"if @book.user_id == current_user.id %></td>
              <td><%= link_to 'Destroy', book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" if @book.user_id == current_user.id %></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

  
    
  