<h1>User info</h1>
  <% @users.each do |user| %>
    <%= user.name %>
    <%= user.introduction %>
  <% end %>
  
<h1>Books</h1>
  <% @books.each do |book| %>
    <%= book.title %>
    <%= book.body %>
  <% end %>
  
<h1>New book</h1>
<%= form_with model: @post_image do |f| %>
 
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>