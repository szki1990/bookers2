<main>
  <div class="container">
    <div class="row pt-5">
      <div class="mx-auto">
        <h1>Editing Book</h1>
        
        <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title, size: 100 %>
          
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          
          <%= f.submit 'Update Book', class: "btn btn-success" %>
          
          
          <%= link_to 'Show', book_path(@book) %>
          <%= link_to 'Back', books_path(@book) %>
        
        <% end %>
      </div>
    </div>
  </div>
</main>
<footer class="text-center mt-5">CopyRight Infratop.inc</footer>