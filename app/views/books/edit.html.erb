<main>
  <div class="container">
    <div class="row pt-5">
      <div class="mx-auto">
        <h1>Editing Book</h1>
        
        <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
          <div class="title">
            <label for="exampleFormControlInput1" class="form-label">Title</label>
            <%= f.text_field :title, class: "form-control", id:"exampleFormControlInput1" %>
          </div>
          <div class="opinion">
            <label for="exampleFormControlTextarea1" class="col-form-label">opinion</label>
            <%= f.text_area :body, class: "form-control", id:"exampleFormControlTextarea1", rows: 3 %>
          </div>
          <div class="mt-3">  
            <%= f.submit 'Update Book', class: "btn btn-success" %>
          </div>
          
          <div class="mt-2">
            <%= link_to 'Show', book_path(@book) %> | <%= link_to 'Back', books_path(@book) %>
          </div>  
        
        <% end %>
      </div>
    </div>
  </div>
</main>
<footer class="text-center mt-5">CopyRight Infratop.inc</footer>