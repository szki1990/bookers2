<h1>User info</h1>

  <% @books.each do |book| %>
    <%= image_tag @user.get_profile_image %>
      <% if @users.present? %> 
      <p><strong><%= @user.name %></strong></p>
      <% end %>
    <%= book.title %>
    <%= book.body %>
    <%= link_to 'Edit', edit_user_path(@user.id) %>
    <%= link_to 'Destroy', book_path(@user.id), method: :delete, "data-confirm" => "本当に消しますか？" %>
  <% end %>
  